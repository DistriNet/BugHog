    "version": "0.2.0",
    "configurations": [
        {
            "name": "BugHog",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bughog/app.py",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "purpose": [
                "debug-test"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DISPLAY": ":1",
                "MOZ_DISABLE_CONTENT_SANDBOX": "1",
                "PATH":"${PATH}:$HOME/.local/bin"
            }
        }
    ]
}
